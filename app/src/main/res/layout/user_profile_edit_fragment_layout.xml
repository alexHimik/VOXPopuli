<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/profile_edit_avatar_block_bottom_margin"
            android:layout_marginTop="@dimen/profile_edit_avatar_block_upper_margin">
            <ImageView
                android:id="@+id/user_avatar"
                android:layout_width="@dimen/circle_avatar_size"
                android:layout_height="@dimen/circle_avatar_size"
                android:layout_centerInParent="true"/>
            <ImageButton
                android:id="@+id/avatar_change_button"
                android:layout_width="@dimen/action_bar_icons_size"
                android:layout_height="@dimen/action_bar_icons_size"
                android:layout_centerInParent="true"
                android:background="@drawable/vox_ic_white_edit"/>
        </RelativeLayout>
        <com.devspark.robototextview.widget.RobotoEditText
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_edit_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            style="@style/edit_text_style"
            android:layout_marginLeft="@dimen/login_page_side_padding"
            android:layout_marginRight="@dimen/login_page_side_padding"
            android:layout_marginTop="@dimen/profile_edit_first_input_top_margin"
            android:inputType="textEmailAddress"
            app:fontFamily="roboto"
            app:textWeight="normal"
            android:hint="@string/user_name_hint"
            />
        <com.devspark.robototextview.widget.RobotoEditText
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_edit_surname_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            style="@style/edit_text_style"
            android:layout_marginLeft="@dimen/login_page_side_padding"
            android:layout_marginRight="@dimen/login_page_side_padding"
            android:layout_marginTop="@dimen/profile_edit_input_top_margin"
            android:inputType="textEmailAddress"
            app:fontFamily="roboto"
            app:textWeight="normal"
            android:hint="@string/user_surname_hint"
            />
        <com.devspark.robototextview.widget.RobotoEditText
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_edit_nick_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            style="@style/edit_text_style"
            android:layout_marginLeft="@dimen/login_page_side_padding"
            android:layout_marginRight="@dimen/login_page_side_padding"
            android:layout_marginTop="@dimen/profile_edit_input_top_margin"
            android:layout_marginBottom="@dimen/profile_edit_last_input_bottom_margin"
            android:inputType="textEmailAddress"
            app:fontFamily="roboto"
            app:textWeight="normal"
            android:hint="@string/user_nick_hint"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_light_grey">

            </View>
        <RelativeLayout
            android:id="@+id/edit_profile_change_passw_place"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:background="@drawable/category_item_selector">
            <ImageView
                android:layout_width="@dimen/action_bar_icons_size"
                android:layout_height="@dimen/action_bar_icons_size"
                android:layout_marginLeft="@dimen/profile_edit_change_passw_img_margin"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/vox_ic_red_password"/>
            <com.devspark.robototextview.widget.RobotoTextView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/profile_edit_change_passw_text_margin"
                style="@style/dark_grey_info_text"
                app:fontFamily="roboto"
                app:textWeight="normal"
                android:text="@string/edit_profile_change_passw_text"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_1dp"
                android:layout_marginLeft="@dimen/login_page_side_padding"
                android:layout_alignParentBottom="true"
                android:background="@color/side_bar_divider_color">
            </View>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>


