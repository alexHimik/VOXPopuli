<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget" />

    <style name="Widget.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/vox_red</item>
        <item name="background">@color/vox_red</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="Widget.ActionBar.Transparent" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/vox_red</item>
        <item name="background">@color/vox_red</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <!--styles for left side bar-->
    <style name="side_bar_text">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="side_bar_text.white" parent="side_bar_text">
        <item name="android:textColor">@color/vox_white</item>
    </style>
    <style name="side_bar_text.category" parent="side_bar_text">
        <item name="android:textColor">@color/side_bar_category_text</item>
    </style>
    <style name="side_bar_text.cat_header" parent="side_bar_text">
        <item name="android:textColor">@color/side_bar_rubrics_header_color</item>
    </style>

    <!--action bar styles-->
    <style name="action_bar_red_title">
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
        <item name="android:textColor">@color/vox_white</item>
    </style>


    <!--Страница с новостью-->
    <style name="comment">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#4C4C4C</item>
        <item name="android:textStyle">italic</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>
    <style name="title_gallery">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
    </style>
    <style name="photo_title">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#4C4C4C</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>
    <style name="photo_author">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>
    <style name="news_author">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#D10A00</item>
    </style>
    <style name="news_tag">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="com_author">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
    </style>
    <style name="com_14_99">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#999999</item>
    </style>
    <style name="com_datetime">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#999999</item>
    </style>


    <style name="search_action_bar_input">
        <item name="android:hint">@string/search_bar_input_hint</item>
        <item name="android:textColorHint">@color/color_light_grey</item>
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
        <item name="android:textColor">@color/color_light_grey</item>
    </style>

    <!--article items-->
    <style name="gray_info_text">
        <item name="android:textColor">@color/color_light_grey</item>
    </style>
    <style name="gray_info_text.size_12sp" parent="gray_info_text">
        <item name="android:textSize">@dimen/ts_title_little</item>
    </style>
    <style name="gray_info_text.size_14sp" parent="gray_info_text">
        <item name="android:textSize">@dimen/ts_descr</item>
    </style>
    <style name="gray_info_text.size_20sp" parent="gray_info_text">
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>
    <style name="dark_grey_info_text" parent="gray_info_text">
        <item name="android:textSize">@dimen/ts_descr</item>
        <item name="android:textColor">@color/restore_password_dark_grey</item>
    </style>

    <!--login screen-->
    <style name="edit_text_style" parent="search_action_bar_input">
        <item name="android:textSize">@dimen/ts_title_white</item>
        <item name="android:hint"></item>
    </style>
    <style name="forgot_password_style">
        <item name="android:textSize">@dimen/ts_title_white</item>
        <item name="android:textColor">@color/vox_red</item>
        <item name="android:layout_marginBottom">@dimen/login_forgot_passw_bottom_margin</item>
        <item name="android:layout_marginTop">@dimen/login_forgot_passw_up_margin</item>
    </style>
    <style name="create_account_btn_style">
        <item name="android:background">@color/vox_white</item>
        <item name="android:textSize">@dimen/ts_descr</item>
        <item name="android:textColor">@color/vox_red</item>
        <item name="android:paddingLeft">@dimen/padding_12dp</item>
        <item name="android:paddingRight">@dimen/padding_12dp</item>
        <item name="android:layout_marginBottom">@dimen/create_account_btn_margin</item>
        <item name="android:layout_marginTop">@dimen/create_account_btn_margin</item>
        <item name="android:layout_marginLeft">@dimen/login_page_side_padding</item>
        <item name="android:layout_marginRight">@dimen/login_page_side_padding</item>
    </style>
    <style name="action_bar_red_title.settings" parent="action_bar_red_title">
        <item name="android:textColor">@color/vox_red</item>
    </style>
</resources>