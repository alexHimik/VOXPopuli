<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vox_white">
    <LinearLayout
        android:id="@+id/left_bar_settings"
        android:layout_width="fill_parent"
        android:minWidth="@dimen/news_card_small_width"
        android:layout_height="@dimen/category_item_height"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="@dimen/settings_icon_size"
            android:layout_height="@dimen/settings_icon_size"
            android:layout_marginLeft="@dimen/padding_16dp"
            android:layout_marginTop="@dimen/padding_12dp"
            android:layout_marginBottom="@dimen/padding_12dp"
            android:src="@drawable/vox_ic_grey_settings"/>
        <com.devspark.robototextview.widget.RobotoTextView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/vox_app_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/side_bar_text.category"
            android:layout_marginLeft="@dimen/settings_text_margin"
            app:fontFamily="roboto"
            app:textWeight="normal"
            android:layout_gravity="center_vertical"
            android:text="@string/settings_string"
            />
    </LinearLayout>
    <ScrollView
        android:id="@+id/left_bar_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/left_bar_settings">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/blured_photo_height"
                android:layout_marginBottom="@dimen/padding_8dp">
                <ImageView
                    android:id="@+id/left_bar_user_photo_blured"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@color/vox_red"/>
                <ImageView
                    android:id="@+id/left_bar_user_avatar"
                    android:layout_width="@dimen/user_avatar_diameter"
                    android:layout_marginLeft="@dimen/padding_16dp"
                    android:layout_marginTop="@dimen/padding_16dp"
                    android:layout_gravity="top|left"
                    android:layout_height="@dimen/user_avatar_diameter"
                    android:background="@drawable/vox_upic_sidebar"/>
                <com.devspark.robototextview.widget.RobotoTextView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/left_bar_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_20dp"
                    android:layout_marginLeft="@dimen/padding_16dp"
                    style="@style/side_bar_text.white"
                    app:fontFamily="roboto"
                    app:textWeight="normal"
                    android:layout_gravity="bottom|left"
                    android:text="@string/default_user_name_stub"/>
            </FrameLayout>
            <include
                android:id="@+id/left_bar_category_all"
                layout="@layout/category_item">
            </include>
            <include
                android:id="@+id/left_bar_category_vox_populi"
                layout="@layout/category_item">
            </include>
            <include
                android:id="@+id/left_bar_category_history"
                layout="@layout/category_item">
            </include>
            <include
                android:id="@+id/left_bar_category_business"
                layout="@layout/category_item">
            </include>
            <include
                android:id="@+id/left_bar_category_interview"
                layout="@layout/category_item">
            </include>
            <kz.voxpopuli.voxapplication.view.RowHoster
                android:id="@+id/left_bar_rubrics_hoster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </kz.voxpopuli.voxapplication.view.RowHoster>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>